{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "ccui": ["components/index.ts"],
      "ccui/es/*": ["components/*"]
    },
    "target": "esnext",
    "lib": [
      "dom", 
      "esnext"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dom", "es"]
}